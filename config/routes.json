{
    /**************************************************************************/
    // Filters
    /**************************************************************************/

    "filters": [
    ],

    /**************************************************************************/
    // Routes
    /**************************************************************************/

    "routes": [
        // Index
        {
            "regex": "#^/$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "index"}            
        },
        // About
        {
            "regex": "#^/about$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "about"}
        },
        // Articles: index
        {
            "regex": "#^/articles$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "articles"}
        },
        // Articles: pages
        {
            "regex": "#^/articles/([0-9]{1,16})$#",
            "controller": "app",
            "action": "article",
            "params": {"article": "${1}"}
        },
        // Articles: pages
        {
            "regex": "#^/([0-9]{1,16})$#",
            "controller": "app",
            "action": "article",
            "params": {"article": "# ${1}"}
        },
        // Contacts
        {
            "regex": "#^/contacts$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "contacts"}
        },
        // Redirect
        {
            "regex": "#^/redirect$#",
            "controller": "app",
            "action": "redirect"
        },
        // Errors: default 404
        {
            "regex": "#^/.*$#",
            "controller": "app",
            "action": "error",
            "params": {"error": "404"}
        }
    ]
    
    /**************************************************************************/
}

/******************************************************************************/