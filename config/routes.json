/******************************************************************************/

{
    /**************************************************************************/
    // Prefixes (unused)
    /**************************************************************************/

    "prefixes": [
    //  "microbe"
    ],

    /**************************************************************************/
    // Filters
    // RouterEx or heirs required
    /**************************************************************************/

    "filters": [
    ],

    /**************************************************************************/
    // Routes
    // This routing rules will override all rules in Router/RouterEx etc classes
    /**************************************************************************/

    "routes": [
        // Index
        // URI: '/'
        {
            "regex": "#^/$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "index"}
        },
        // Index
        // URI: '/index'
        {
            "regex": "#^/index$#",
            "controller": "app",
            "action": "index",
            "params": {"page": "index", "hello": "hello"}
        },
        // About
        // URI: '/about'
        {
            "regex": "#^/about$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "about"}
        },
        // Articles: index
        // URI: '/articles'
        {
            "regex": "#^/articles$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "articles"}
        },
        // Articles: pages
        // Sample: '/articles/12'
        {
            "regex": "#^/articles/([0-9]{1,16})$#",
            "controller": "app",
            "action": "article",
            "params": {"article": "${1}"}
        },
        // Articles: pages
        // Sample: '/12'
        {
            "regex": "#^/([0-9]{1,16})$#",
            "controller": "app",
            "action": "article",
            "params": {"article": "# ${1}"}
        },
        // Contacts
        // URI: '/contacts'
        {
            "regex": "#^/contacts$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "contacts"}
        },
        // Redirect handling example
        // URI: '/redirect'
        {
            "regex": "#^/redirect$#",
            "controller": "app",
            "action": "redirect"
        },
        // Layout handling example
        // Direct render without controller
        // URI: '/layout'
        {
            "regex": "#^/layout$#",
            "layout": "main",
            "params": {"page": "index"}
        },
        // Template handling example
        // Direct render without controller
        // URI: '/template'
        {
            "regex": "#^/template$#",
            "template": "error",
            "params": {"error": 500}
        },
        // Error 404
        // URI: all other
        {
            "regex": "#^/.*$#",
            "controller": "app",
            "action": "page",
            "params": {"page": "404"},
            "code": 404
        }
    ]

    /**************************************************************************/
}

/******************************************************************************/